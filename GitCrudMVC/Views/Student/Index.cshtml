@model IEnumerable<GitCrudMVC.Models.StudentRegModal>

<h2>Students</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Mobile</th>
                <th>Address</th>
                <th>Course ID</th>
                <th>Languages</th>
                <th>Photo</th>
                <th>Document</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.c_studid</td>
                    <td>@student.c_studname</td>
                    <td>@student.c_studdob.ToShortDateString()</td>
                    <td>@student.c_studemail</td>
                    <td>@student.c_studgender</td>
                    <td>@student.c_studmobile</td>
                    <td>@student.c_studaddress</td>
                    <td>@student.c_studcourse_id</td>
                    <td>@string.Join(", ", student.c_studlanguages)</td>
                    <td>
                        <img src="@Url.Action("GetPhoto", "Student", new { id = student.c_studid })" alt="Student Photo"
                            width="100" />
                    </td>
                    <td>
                        <a href="@Url.Action("GetDocument", "Student", new { id = student.c_studid })" download class="btn btn-primary">Download Document</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@student.c_studid" class="btn btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@student.c_studid" class="btn btn-danger">Delete</a> |
                        <a asp-action="Details" asp-route-id="@student.c_studid" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Create" class="btn btn-success">Create New Student</a>